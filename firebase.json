{
    "hosting": {
        "public": "apps/fb-hosting/build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "regex": "^/fb-functions(/.*)?$",
                "function": "fbFunction1"
            },
            {
                "regex": "^/fb-app-hosting(/.*)?$",
                "run": {
                    "serviceId": "fb-app-hosting-backend",
                    "region": "us-central1"
                }
            },
            {
                "regex": "^/fb-app-hosting-2(/.*)?$",
                "run": {
                    "serviceId": "fb-app-hosting-backend-2",
                    "region": "us-central1"
                }
            }
        ]
    },
    "emulators": {
        "hub": {
            "port": 4400
        },
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 5001
        },
        "firestore": {
            "port": 8090
        },
        "ui": {
            "enabled": true
        },
        "hosting": {
            "port": 5005
        },
        "singleProjectMode": true
    },
    "functions": {
        "source": "apps/fb-functions",
        "predeploy": ["npx -y pnpm --filter fb-functions build"]
    }
}
