{
  "name": "firebase-typescript",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22",
    "pnpm": "^10.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm kill-emulator-ports && concurrently --handle-input --kill-others \"npx firebase emulators:start --only hosting,apphosting\" \"pnpm --filter fb-hosting run dev\" \"pnpm --filter @packages/ui storybook\"",
    "format": "prettier --write .",
    "kill-emulator-ports": "pnpm --filter scripts run kill-emulator-ports",
    "lint": "pnpm -r --parallel lint",
    "list-projects": "npx firebase projects:list",
    "prepare": "husky",
    "reinstall": "rm -f pnpm-lock.yaml && rm -rf node_modules && pnpm -r exec rm -rf node_modules && pnpm install -r",
    "create-builder-sa": "pnpm --filter scripts run create-builder-sa",
    "setup-builder-iam": "pnpm --filter scripts run setup-builder-iam",
    "switch-project": "npx firebase use",
    "test": "pnpm -r --parallel run test",
    "typecheck": "pnpm -r --filter !@packages/eslint-config --parallel exec tsc --noEmit",
    "validate": "concurrently \"pnpm run lint\" \"pnpm run typecheck\""
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "firebase-tools": "^15.0.0"
  }
}